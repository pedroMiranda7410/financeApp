<body class="bg-gradient-wallet">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image-wallet"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Crie sua Conta!</h1>
                            </div>
                            <%= form_for(@user, url: create_user_path, html: { class:"user" }) do |form| %>
                                <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input type="radio" name="user[individual]" value="true" checked><strong>Conta Individual</strong>
                                        </div>
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input type="radio" name="user[individual]" value="false"><strong>Conta Conjunta</strong>
                                        </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12">
                                        <%= form.text_field :name, class:"name form-control form-control-user", id:"name", required: true, placeholder: 'Digite seu nome aqui...' %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= form.text_field :phone, class:"phone form-control form-control-user", required: true, placeholder: 'Telefone Aqui...' %>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= form.text_field :birthdate, class:"date form-control form-control-user", required: true, placeholder: 'Data de Nascimento Aqui...' %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= form.text_field :email, class:"email form-control form-control-user", required: true, placeholder: 'E-mail Aqui...' %>
                                </div>
                                <div class="form-group">
                                    <%= form.text_field :cpf, class:"cpf form-control form-control-user", required: true, placeholder: 'CPF Aqui...' %>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= form.password_field :password, class:"form-control form-control-user", required: true, placeholder: 'Senha Aqui...' %>
                                    </div>
                                    <div class="col-sm-6">
                                        <%= form.password_field :password_confirmation, class:"form-control form-control-user", required: true, placeholder: 'Repita sua Senha Aqui...' %>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Registrar Conta
                                </button>
                            <% end %>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <%= link_to "JÃ¡ possui uma conta? Login!", login_path, class: 'small' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>


<script>
    $(document).ready(function(){
        $('.cpf').mask('000.000.000-00');
        $('.phone').mask('(00) 00000-0000');
        $('.date').mask('00/00/0000');
        $("input[type=radio]").change(function(){
            $("#name").val('');
            if (this.value == 'true') {
                $("#name").attr("placeholder", 'Digite seu nome aqui...');
            }
            else {
                $("#name").attr("placeholder", 'Um apelido para o grupo..');
            }
        });
    });
</script>